@model Entity.Category

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    <a href="@Url.Action("Create", "Bookmark")" class="btn btn-primary">
        <span>Add Bookmark</span>
        </a> |
    @Html.ActionLink("Back to List", "Index")
</p>

<h3>Registered bookmarks:</h3>

<table>
    <thead>
        <tr>
            <th>URL</th>
            <th>Created Date</th>
            <th>Description</th>
            <th>User Id</th>
        </tr>
    </thead>
        <tbody>
            @{ foreach (var item in Model.Bookmarks.ToList())
                            {
                    <tr>
                        <td>@item.URL</td>
                        <td>@item.CreateDate</td>
                        <td>@item.ShortDescription</td>
                        <td>@item.UserId</td>
                    </tr>
                            } }
        </tbody>

    

</table>